{% extends 'base.html.twig' %}

{% block title %}Hello ActorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for actor in actors %}
        <div class="col-12">
            <h4>{{ actor.name }}</h4>
            <img class="align-self-start mr-3 w-25" src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }} picture">
        </div>
    {% endfor %}
</div>
{% endblock %}
