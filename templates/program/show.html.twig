{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <a id="watchlist" href="{{ path('program_watchlist', {id: program.id})}}">
        <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
    </a>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    {% for season in seasons %}
        <div>
            <h2>{{ loop.index }} - Saison n°{{ season.number }}</h2>
            {# Lien vers la fiche de la saison : #}
            <a href="{{ path("program_season_show", { "slug": program.slug, "season": season.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
  </div>
</div>

<strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <li><a href="{{ path("actor_show", { id: actor.id }) }}">{{ actor.name }}</a></li>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>

{% if is_granted("ROLE_CONTRIBUTOR") %}
    <a href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>
{%endif%}
<br>
<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}